<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/rounded_about"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_gravity=""
        android:background="@drawable/logo_fullwhas"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Todos los derechos resrvados."
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Desarrollado por"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/about"
        android:textColor="@color/blue_A200"
        android:fontFamily="@font/catamaran_bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="marceloespinoza00@gmail.com"
        android:textColor="@color/white"
        android:fontFamily="@font/catamaran_light"
        android:gravity="center"/>

</LinearLayout>